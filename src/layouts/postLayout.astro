---
import Head from '../components/PostHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '../styles/global.astro';

import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
    title: string;
    author: string;
    date: string;
}>;

const { title, author, date } = Astro.props.frontmatter;
---

<html>
    <Head title={title} />
    <body>
        <Header />
        <article>
            <h1>{title}</h1>
            <subtitle>{author} - {date}</subtitle>
            <slot />
        </article>
        <Footer />
    </body>
</html>
