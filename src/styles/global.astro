---
import '@fontsource/bitter/300.css';
import '@fontsource/bitter/400.css';
import '@fontsource/raleway/400.css';
import '@fontsource/raleway/700.css';
import '@fontsource/fira-code/400.css';
---

<style is:global>
    :root {
        --primary: rgb(203, 96, 21);
        --secondary: rgb(140, 169, 215);
        --max-width: 800px;
    }

    html {
        --text: rgb(30, 30, 30);
        --text-mid: rgb(120, 120, 120);
        --shadow: rgb(240, 240, 240);
        --text-light: rgb(200, 200, 200);
        --background: rgb(250, 250, 250);
        color: var(--text);
        font-size: 62.5%;
    }
    html.dark {
        --text: rgb(250, 250, 250);
        --text-mid: rgb(160, 160, 160);
        --shadow: rgb(50, 50, 50);
        --text-light: rgb(80, 80, 80);
        --background: rgb(30, 30, 30);
    }
    body {
        margin: 0;
        font-size: 1.6rem;
        background: var(--background);
    }
    h1,
    h2,
    h3 {
        font-family: 'Raleway', sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        margin-block-start: 0;
        margin-block-end: 0;
    }
    h1 {
        font-size: clamp(3.6rem, 9vw, 8.4rem);
        margin-block-end: 1.8rem;
    }
    h2 {
        font-size: 2.4rem;
        margin-block-end: 1.2rem;
    }
    h3 {
        font-size: 1.8rem;
        margin-block-end: 0.9rem;
    }
    p {
        font-family: 'Bitter', serif;
        font-weight: 300;
        margin-block-start: 0;
        margin-block-end: 0.8rem;
        line-height: 2.2rem;
    }
    a {
        color: var(--text-mid);
        text-decoration: none;
    }
    a:hover,
    a:active {
        color: var(--text);
        text-decoration: none;
    }
    strong {
        background-color: var(--primary);
        color: var(--background);
        padding: 0.1rem 0.4rem;
        border-radius: 0.2rem;
    }
    pre {
        font-family: 'Fira Code', monospace;
    }
    @media screen and (min-resolution: 250dpi) {
        p {
            font-weight: 400;
        }
    }
</style>

<script>
    // Sets theme to dark mode if system settings or session storage says so
    const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');
    const prefersLightScheme = window.matchMedia(
        '(prefers-color-scheme: light)'
    );
    const sessionTheme = sessionStorage.getItem('theme');
    if (prefersDarkScheme.matches || sessionTheme == 'dark') {
        document.documentElement.classList.add('dark');
    } else if (prefersLightScheme.matches || sessionTheme == 'light') {
        document.documentElement.classList.remove('dark');
    }
    prefersDarkScheme.addEventListener('change', (e) => {
        if (e.matches) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    });
</script>
